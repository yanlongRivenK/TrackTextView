<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >



    <com.yanlongrivenk.yltextview.TextViewYL
        android:layout_marginTop="50dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/ttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yanlongRivenK"
        android:textSize="40dp"
        app:originTvColor="#0f0"
        app:changeTvColor="#f30"
        app:Directionn="DIRECTION_RIGHT"
        app:percent="0.7"

    />

    <Button
        android:text="from_left"
        android:layout_marginTop="50dp"
        android:id="@+id/bt_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="from_fight"
        android:layout_marginTop="10dp"
        android:id="@+id/bt_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10dp"
        android:text="object_Animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:id="@+id/objectAnimator"

    />

</LinearLayout>
